{
	"extends": "@mjs/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"@mjs/ui/*": ["../../packages/ui/src/*"],
			"next-mdx-import-source-file": ["./mdx-components.ts"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
